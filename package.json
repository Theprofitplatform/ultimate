{
  "name": "ultimate-seo-platform",
  "version": "1.0.0",
  "description": "Ultimate SEO Management Platform with Google Workspace Integration",
  "main": "index.js",
  "scripts": {
    "hive:start": "cd hive && ./start-hive.sh",
    "hive:stop": "cd hive && ./stop-hive.sh",
    "hive:status": "cd hive && ./hive-status.sh",
    "hive:logs": "tail -f hive/logs/*.log",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:auth": "jest tests/unit/auth.test.js",
    "test:keywords": "jest tests/integration/keywords.test.js",
    "test:migrations": "jest tests/integration/database-migrations.test.js",
    "test:user-flow": "jest tests/e2e/user-flow.test.js",
    "test:ci": "jest --coverage --ci --testResultsProcessor=jest-junit --coverageReporters=text-lcov",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear-cache": "jest --clearCache",
    "test:api": "jest tests/unit tests/integration",
    "test:web": "echo 'Web tests not configured yet'",
    "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd apps/api && npm run migrate",
    "db:seed": "cd apps/api && npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theprofitplatform/ultimate.git"
  },
  "keywords": [
    "seo",
    "google",
    "workspace",
    "saas",
    "multi-tenant",
    "hive",
    "distributed"
  ],
  "author": "The Profit Platform",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "babel-jest": "^29.7.0",
    "@babel/preset-env": "^7.23.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0",
    "bcrypt": "^5.1.1",
    "pg": "^8.11.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "natural": "^8.1.0",
    "redis": "^4.6.7",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
