# Ultimate SEO Platform - Authentication Environment Variables
# Copy this file to .env and fill in the appropriate values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ultimate_seo
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ultimate_seo
DB_USER=app_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# JWT Configuration
JWT_ACCESS_SECRET=your_very_secure_jwt_access_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_here_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=ultimate-seo
JWT_AUDIENCE=ultimate-seo-api

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Application Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
WEB_BASE_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://theprofitplatform.com.au,https://test.theprofitplatform.com.au,https://dashboard.theprofitplatform.com.au

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_min_32_chars
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Email Configuration (for sending verification emails, password resets, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@theprofitplatform.com.au
EMAIL_FROM_NAME=Ultimate SEO Platform

# Redis Configuration (optional, for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads

# Analytics Configuration
GOOGLE_ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GOOGLE_OAUTH=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_RATE_LIMITING=true
ENABLE_API_KEYS=true

