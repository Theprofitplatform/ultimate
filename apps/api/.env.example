# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ultimate_seo
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ultimate_seo
DB_USER=username
DB_PASSWORD=password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=development

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# External API Keys (for keyword analysis)
GOOGLE_KEYWORD_PLANNER_API_KEY=your-google-api-key
SEMRUSH_API_KEY=your-semrush-api-key
AHREFS_API_KEY=your-ahrefs-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Tenant Configuration
DEFAULT_TENANT_RATE_LIMIT=1000
TENANT_ISOLATION_ENABLED=true

# Cache Configuration
CACHE_TTL_KEYWORDS=3600
CACHE_TTL_ANALYTICS=7200
CACHE_TTL_SUGGESTIONS=21600