# Production Environment Configuration
# Copy this file to .env.production and update values for production deployment

# Application Environment
NODE_ENV=production
LOG_LEVEL=warn
API_PORT=9090
WS_PORT=9092
WEB_PORT=3000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ultimate_production
POSTGRES_USER=ultimate_user
POSTGRES_PASSWORD=production_ultra_secure_postgres_password
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=production_ultra_secure_redis_password
REDIS_URL=redis://default:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Security Keys (Use ultra-secure random strings for production)
JWT_SECRET=production_jwt_secret_64_chars_ultra_secure_random_string_here
ENCRYPTION_KEY=production_encryption_key_64_chars_ultra_secure_random
SESSION_SECRET=production_session_secret_64_chars_ultra_secure_random_string

# Google OAuth Configuration
GOOGLE_CLIENT_ID=production-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=production_google_client_secret
GOOGLE_REDIRECT_URI=https://theprofitplatform.com.au/auth/google/callback

# Google Workspace API
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nPRODUCTION_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_EMAIL=production-service-account@production-project.iam.gserviceaccount.com
GOOGLE_PROJECT_ID=production-google-cloud-project

# Application URLs
API_URL=https://theprofitplatform.com.au/api
WS_URL=wss://theprofitplatform.com.au/ws
WEB_URL=https://theprofitplatform.com.au
CORS_ORIGIN=https://theprofitplatform.com.au

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
UPLOAD_DEST=/app/uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@theprofitplatform.com.au
SMTP_PASS=production_email_app_password

# Monitoring & Analytics
SENTRY_DSN=https://production-sentry-dsn@sentry.io/production-project-id
NEW_RELIC_LICENSE_KEY=production_new_relic_license_key
GOOGLE_ANALYTICS_ID=GA-PRODUCTION-ID

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=ultimate:prod:

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Worker Configuration
WORKER_CONCURRENCY=10
QUEUE_NAME=ultimate-production-queue
BULL_REDIS_URL=${REDIS_URL}

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ultimate-production-backups
AWS_ACCESS_KEY_ID=production_aws_access_key
AWS_SECRET_ACCESS_KEY=production_aws_secret_key
AWS_REGION=us-east-1

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/production-cert.pem
SSL_KEY_PATH=/etc/ssl/private/production-key.pem

# Feature Flags (Production settings)
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true
ENABLE_GOOGLE_WORKSPACE_SYNC=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_API_RATE_LIMITING=true

# Performance Tuning (Optimized for production)
MAX_CONNECTIONS=200
CONNECTION_TIMEOUT=10000
QUERY_TIMEOUT=10000
STATEMENT_TIMEOUT=10000

# Development Tools (Disabled for production security)
DEBUG=
ENABLE_SWAGGER=false
ENABLE_MORGAN_LOGGING=false
ENABLE_CORS=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Security Headers
HELMET_ENABLED=true
CSRF_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# Load Balancing
CLUSTER_MODE=true
CLUSTER_WORKERS=0

# Metrics and Analytics
PROMETHEUS_ENABLED=true
METRICS_PORT=9100
METRICS_PATH=/metrics