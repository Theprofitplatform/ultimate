FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy application code
COPY agents/ ./agents/
COPY core/ ./core/
COPY services/ ./services/

# Create necessary directories
RUN mkdir -p logs

# Run as non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001
USER nodejs

# The agent type will be determined by environment variable
CMD ["sh", "-c", "node agents/${AGENT_TYPE}.agent.js"]